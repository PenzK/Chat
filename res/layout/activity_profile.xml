<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/profile_nick"
    	android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:text="Nick"	/>
	<TextView 
        android:id="@+id/profile_chNickTV"
    	android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:text="Change nick:"	/>
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content">
		<EditText 
	   	 	android:id="@+id/profile_nickChange"
    		android:layout_width="match_parent"
   			android:layout_height="wrap_content"
   			android:hint="Enter new nick:"	
   			android:layout_weight="1"/>
		<Button 
	  	 	android:id="@+id/profile_nickChangeBut"
    		android:layout_width="match_parent"
   			android:layout_height="wrap_content"
   			android:text="Change"	
   			android:layout_weight="2"/>
	</LinearLayout>
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content">
		 <TextView 
	        android:id="@+id/profile_crRoomsTV"
    		android:layout_width="match_parent"
   			android:layout_height="wrap_content"
   			android:text="Created rooms:"
   			android:layout_weight="1"	/>
		 <TextView 
	        android:id="@+id/profile_crRoomsTVnum"
    		android:layout_width="match_parent"
   			android:layout_height="wrap_content"
   			android:text="X"
   			android:layout_weight="1"	/>
	</LinearLayout>
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content">
		 <TextView 
	        android:id="@+id/profile_crMsgTV"
    		android:layout_width="match_parent"
   			android:layout_height="wrap_content"
   			android:text="Created messages:"
   			android:layout_weight="1"	/>
		 <TextView 
	        android:id="@+id/profile_crMsgTVnum"
    		android:layout_width="match_parent"
   			android:layout_height="wrap_content"
   			android:text="X"
   			android:layout_weight="1"	/>
	</LinearLayout>
</LinearLayout>
